<<nobr>>
<span id="stats-box"></span>
<<link $args[0]>>
<<replace "#stats-box">>
<div class="stats">
<div class="stats-content">
<span class="close"><<link "Ã—">>
<<replace "#stats-box">><</replace>>
<</link>></span>
<<include $args[1]>>
</div>
</div>
<</replace>>
<</link>>
<</nobr>>\
<</widget>>